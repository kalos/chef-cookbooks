### debian stable
###
<% @node[:apt][:mirrors].each do |url| -%>
deb http://<%= url %>/debian/ stable main contrib non-free
  <% if @node[:apt][:sources] %>
deb-src http://<%= url %>/debian/ stable main contrib non-free
  <% end -%>
<% end -%>

# volatile
deb http://volatile.debian.org/debian-volatile stable/volatile main contrib non-free
<% if @node[:apt][:sources] %>
deb-src http://volatile.debian.org/debian-volatile stable/volatile main contrib non-free
<% end -%>

# security
deb http://security.debian.org stable/updates main contrib non-free
<% if @node[:apt][:sources] %>
deb-src http://security.debian.org stable/updates main contrib non-free
<% end -%>

server {
  listen 443;
  server_name TEMPLATE;

  access_log <%= @node[:nginx][:log_dir] %>/TEMPLATE_ssl.access.log main buffer=32k;
  error_log  <%= @node[:nginx][:log_dir] %>/TEMPLATE_ssl.error.log  info;

  root   /srv/www/TEMPLATE;
  index  index.html;

  ssl on;

  ssl_ciphers               HIGH:!ADH;
  ssl_prefer_server_ciphers on;
  ssl_protocols             SSLv3;

  ssl_session_cache         shared:SSL:10m;
  ssl_session_timeout       5m;

  ssl_certificate           /etc/nginx/ssl/TEMPLATE.crt;
  ssl_certificate_key       /etc/nginx/ssl/TEMPLATE.key;

}

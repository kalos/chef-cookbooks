server {
  listen 80;
  server_name TEMPLATE www.TEMPLATE;

  access_log <%= @node[:nginx][:log_dir] %>/TEMPLATE.access.log main buffer=32k;
  error_log  <%= @node[:nginx][:log_dir] %>/TEMPLATE.error.log  info;

  root   /srv/www/TEMPLATE;
  index  index.html index.php;

  location ~ .php$ {
    fastcgi_pass 127.0.0.1:9000;
    include <%= @node[:nginx][:extra_conf_dir] %>/fastcgi_params.conf;
  }
}

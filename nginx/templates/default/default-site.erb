server {
  listen       80;
  server_name  <%= @node[:hostname] %>;

  access_log   <%= @node[:nginx][:log_dir] %>/<%= @node[:hostname] %>.access.log main buffer=32k;
  error_log    <%= @node[:nginx][:log_dir] %>/<%= @node[:hostname] %>.access.log info;

  location / {
    root         <%= @node[:nginx][:www_path] %>/nginx-default;
    index        index.html;
  }

}
